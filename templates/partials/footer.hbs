<footer>
    <p>created with coinCanvas</p>
    <script>
        var a = document.getElementById("theme");
        a.onclick = function(){
            document.body.classList.toggle("dark-theme");
            if(document.body.classList.contains("dark-theme")){
                a.src = "images/sunny.png";
            }
            else{
                a.src = "images/moon.png";
            }
        }   
    </script>
</footer>
